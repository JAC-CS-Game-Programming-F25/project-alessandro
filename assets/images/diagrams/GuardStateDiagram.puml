@startuml GuardStateMachine

hide empty description
skinparam monochrome true

state "Patrol Guard" as PG {
    state "PatrolState" as Patrol
    state "AlertState" as Alert1
    
    [*] --> Patrol
    Patrol --> Alert1: Player Detected
    Alert1 --> Patrol: Level Restarted
}

state "Stationary Guard" as SG {
    state "IdleState" as Idle
    state "RotatingState" as Rotating
    state "AlertState" as Alert2
    
    [*] --> Idle
    Idle --> Rotating: Start Rotation
    Rotating --> Idle: Stop Rotation
    Idle --> Alert2: Player Detected
    Rotating --> Alert2: Player Detected
    Alert2 --> Idle: Level Restarted
}

@enduml